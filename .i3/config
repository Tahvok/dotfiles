set $i3exit ~/git/bash/i3exit/i3exit

set $mode_system System (l) lock, (e) logout, (s) suspend, (h) hibernate, (r) reboot, (Shift+s) shutdown
mode "$mode_system" {
    bind 33 exec --no-startup-id $i3exit lock, mode "default"
    bind 40 exec --no-startup-id $i3exit logout, mode "default"
    bind 47 exec --no-startup-id $i3exit suspend, mode "default"
    bind 44 exec --no-startup-id $i3exit hibernate, mode "default"
    bind 32 exec --no-startup-id $i3exit reboot, mode "default"
    bind Shift+47 exec --no-startup-id $i3exit shutdown, mode "default"  

    # back to normal: Enter or Escape
    bindsym Return mode "default"
    bindsym Escape mode "default"
}
bindsym $mod+Pause mode "$mode_system"

bind $mod+Mod1+33 exec --no-startup-id $i3exit lock, mode "default"

